//
// Utility classes
// --------------------------------------------------


// Floats
// -------------------------

clearfix() {
  &:before,
  &:after {
    content: " "; // 1
    display: table; // 2
  }
  &:after {
    clear: both;
  }
}
center-block() {
  display: block;
  margin-left: auto;
  margin-right: auto;
}
pull-right() {
  float: right !important;
}
pull-left() {
  float: left !important;
}


// Toggling content
// -------------------------

// Note: Deprecated .hide in favor of .hidden or .sr-only (as appropriate) in v3.0.1
hide() {
  display: none !important;
}
show() {
  display: block !important;
}
invisible() {
  visibility: hidden;
}
text-hide() {
  font: ~"0/0" a;
  color: transparent;
  text-shadow: none;
  background-color: transparent;
  border: 0;
}


// Hide from screenreaders and browsers
//
// Credit: HTML5 Boilerplate

hidden() {
  display: none !important;
  visibility: hidden !important;
}


// For Affix plugin
// -------------------------

affix() {
  position: fixed;
}

// Inner Utils

_boxSizing($boxModel = border-box) {
    -webkit-box-sizing: $boxModel
    -moz-box-sizing: $boxModel
    box-sizing: $boxModel
}

_tabFocus(){
    // Default
    outline: thin dotted
    // WebKit
    outline: 5px auto -webkit-focus-ring-color
    outline-offset: -2px
}

_textEmphasisVariant(color = $color){
  color: color
  a&:hover {
    color: darken(color, 10%)
  }  
}

_bgVariant(color = $color) {
  background-color: color
  a&:hover {
    background-color: darken(color, 10%)
  }  
}
  